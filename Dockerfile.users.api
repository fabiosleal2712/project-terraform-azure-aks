FROM mcr.microsoft.com/dotnet/aspnet:9.0 AS base
WORKDIR /app
EXPOSE 80

FROM mcr.microsoft.com/dotnet/sdk:9.0 AS build
WORKDIR /src
COPY ./niu-nutri/ ./
RUN dotnet publish ./src/Users/Users.Api \
	-c Release \
	--os linux \
	--arch x64 \
	-p:PublishTrimmed=false \
	-o /niunutri/volume/UsersApi

FROM base AS final
WORKDIR /app
COPY --from=build /niunutri/volume/UsersApi .
RUN apt-get update && \
    apt-get install -y --no-install-recommends telnet iputils-ping && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*
COPY aspnetapp.pfx /https/aspnetapp.pfx
RUN mkdir -p /https && chmod 600 /https/aspnetapp.pfx
ENTRYPOINT ["dotnet", "Users.Api.dll"]

